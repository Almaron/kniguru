- form_for @writing do |f|
  - if @writing.errors.any?
    #error_explanation
      %h2= "#{pluralize(@writing.errors.count, "error")} prohibited this press from being saved:"
      %ul
        - @writing.errors.full_messages.each do |msg|
          %li= msg

  .form_line
    = f.label :head
    = f.text_field :head
  .form_line
    = f.label :content
    = f.text_area :content
  .form_line
    = f.label :paper_name
    = f.text_field :paper_name
  .form_line
    = f.label :paper_url
    = f.text_field :paper_url
  .form_line
    = f.label :published_on
    = f.text_field :published_on
  .form_line
    = f.submit 'Save'
